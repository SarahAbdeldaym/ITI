
<div >

  <div class="mb-2">
    <h5 class="d-inline">  books: </h5>
    <a class=" col-2 offset-6 btn btn-sm btn-primary "
      <%= link_to "Add a-book" , new_book_path %>
    </a>
  </div>


  <div >
  <table class="table">

  
    <tr>
      
      <th scope="col">Name</th>
      <th   scope="col">Image</th>
      <th scope="col">Price</th>
      <th scope="col">Last Updated</th>
      <th>Updated_At</th>
      <th>Created By</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

  <% @books.each do |p| %>
    <tr>
    <td>
    <%= p.name %>
    </td>
    <td >
    <%= image_tag(p.image,class:' w-50 p-3') %>
    </td>
    <td>
    <%= p.user.name %>
     </td>
 
    <td>
    <%=( p.description ).truncate_words(3)%>
    </td>
    <td>
    <%= distance_of_time_in_words( Time.now,p.updated_at, include_seconds: true) %>
    </td>
    <td>
    <%= p.user.name %>
     </td>
    

        <td>

        <div class="col-12 offset-1 mt-1 mb-2">
          <a class="btn btn-sm btn-primary"
          <%= link_to "Details" , p %>
          </a>
          <a class="btn btn-sm btn-warning"

            <%= link_to " Edit" , edit_book_path(p) %>
          </a>
          <a class="btn btn-sm btn-danger me-2 "
             <%= link_to "Delete", book_path(p), data: {
               turbo_method: :delete,
               turbo_confirm: "Are you sure?"
             } %>
             </a>
        </div>

        </td>
        </tr>
        </div>

    <% end %>

</div>